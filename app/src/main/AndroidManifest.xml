<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.androidwave8.dailygadget">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Fullscreen">
        <activity
            android:name="com.androidwave8.dailygadget.data.ui.list.ListActivity"
            android:exported="true" />
        <activity
            android:name="com.androidwave8.dailygadget.data.ui.home.HomeActivity"
            android:exported="true" />
        <activity
            android:name=".data.ui.profile.ProfileActivity"
            android:exported="true" />
        <activity
            android:name=".data.ui.register.RegistrationActivity"
            android:exported="true"
            tools:ignore="ExtraText">

        </activity>
        <activity android:name=".data.ui.splashscreen.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".data.ui.detail.DetailActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity android:name=".data.ui.onboarding.OnBoarding" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true" />
    </application>

</manifest>