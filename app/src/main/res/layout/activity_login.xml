<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/green"
    tools:context=".ui.login.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="DailyGadget"
        android:textSize="40sp"
        android:textColor="@color/green_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/manrope_regular"
        android:textAlignment="center"
        />

    <ImageView
        android:id="@+id/ivRegContainer"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/bg_round_login_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_round_login_field"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawableTint="@color/green"
        android:fontFamily="@font/manrope_regular"
        android:gravity="center"
        android:hint="Username"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:padding="10dp"
        android:paddingStart="10dp"
        android:textColor="@color/grey_text"
        android:textColorHint="@color/grey_text"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivRegContainer" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_round_login_field"
        android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
        android:fontFamily="@font/manrope_regular"
        android:gravity="center"
        android:hint="Password"
        android:inputType="textPassword"
        android:drawableTint="@color/green"
        android:maxLines="1"
        android:padding="10dp"
        android:paddingStart="10dp"
        android:textColor="@color/grey_text"
        android:textColorHint="@color/grey_text"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etUsername" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/green_main_color"
        android:clickable="true"
        android:fontFamily="@font/manrope_regular"
        android:text="LOGIN"
        android:textColor="@color/white"
        android:textSize="12dp"
        app:layout_constraintRight_toRightOf="@id/ivRegContainer"
        app:layout_constraintTop_toBottomOf="@id/etPassword" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Don't have account ?"
        app:layout_constraintBottom_toBottomOf="@id/ivRegContainer"
        app:layout_constraintEnd_toEndOf="@id/ivRegContainer"
        app:layout_constraintHorizontal_bias="0.237"
        app:layout_constraintStart_toStartOf="@id/ivRegContainer"
        app:layout_constraintTop_toBottomOf="@id/btnLogin" />

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Register Now!"
        android:textColor="@color/greenOff"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintStart_toEndOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>

